<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/recCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="354dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/cairo"
                android:text="@string/name"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/counter"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/cairo"
                android:text="@string/next_does_due_3_days"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dateND"
                android:layout_width="134dp"
                android:layout_height="30dp"
                android:layout_marginStart="240dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/cairo"
                android:text="@string/_12_04_2024"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/administrated"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/cairo"
                android:text="@string/last_administation"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dateADM"
                android:layout_width="134dp"
                android:layout_height="30dp"
                android:layout_marginStart="240dp"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/cairo"
                android:text="@string/_12_04_2024"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="180dp"
                android:fontFamily="@font/cairo"
                android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipiscing_elit"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="285dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/cairo"
                android:paddingBottom="10dp"
                android:text="@string/done"
                android:textColor="@color/verdigris"
                android:textSize="24sp"
                tools:ignore="RtlHardcoded" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="285dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/trash" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>